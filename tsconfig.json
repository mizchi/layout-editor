    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  }
}
